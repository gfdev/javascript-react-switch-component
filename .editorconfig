root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true
charset = utf-8

[**.{js,jsx,html}]
indent_size = 4

[**.{css,scss,sass}]
indent_size = 2

[*.json]
indent_size = 2

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
